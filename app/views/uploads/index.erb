<div class='container'>
  <div class='row'>
    <div class='col-lg-2 col-lg-offset-5'>
      <%= link_to 'Upload image', new_upload_path, class: 'btn btn-primary btn-lg'%>
    </div>
  </div>
  <% if current_user && @uploads%>
    <div class='row'>
      <% @uploads.each do |u| %>
        <a href=<%= u.image.url %>>
          <div class='col-lg-2'>
            <%= image_tag u.image.url(:medium) %>
          </div>
        </a>
      <% end %>
    </div>
  <% end %>
</div>